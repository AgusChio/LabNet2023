@model Practica6.MVC.Models.ShippersView

@{
    ViewBag.Title = "Insert Shippers";
}

<h1 class="mb-4">Vista para Insertar</h1>
<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("Insert", "Shippers", FormMethod.Post, new { id = "shipperForm" }))
        {
            <div class="form-group mb-3">
                @Html.LabelFor(shipper => shipper.CompanyName)
                @Html.TextBoxFor(shipper => shipper.CompanyName, new { @class = "form-control" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(shipper => shipper.Phone)
                @Html.TextBoxFor(shipper => shipper.Phone, new { @class = "form-control"})
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-success" value="Guardar" />
            </div>
        }
    </div>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            $("#shipperForm").submit(function (event) {
                event.preventDefault();

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("Insert", "Shippers")",
                    data: $("#shipperForm").serialize(),
                    success: function (data) {
                        if (data.result) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Success',
                                text: 'The shipper has been successfully created.'
                            }).then(function () {
                                window.location.href = "@Url.Action("Index", "shippers")";
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Validation error',
                                text: 'The supplier could not be created. Error: ' + data.error
                            });
                        }
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'There was an error communicating with the server.'
                        });
                    }
                });
            });
        });
    </script>
}